{
  "name": "nexus-platform",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "pnpm db:generate",
    "dev": "turbo run dev",
    "dev:admin": "turbo run dev --filter=admin",
    "dev:agent": "turbo run dev --filter=agent",
    "build": "pnpm db:generate && turbo run build",
    "build:admin": "pnpm db:generate && turbo run build --filter=admin",
    "build:agent": "pnpm db:generate && turbo run build --filter=agent",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
